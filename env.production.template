# URTRADINGEXPERT.COM - Production Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_APP=personal_dashboard_api.py
SECRET_KEY=urtradingexpert-production-secret-key-2024-CHANGE-THIS

# Server Configuration
HOST=0.0.0.0
PORT=5001
DEBUG=false

# Database Configuration (if using PostgreSQL)
DATABASE_URL=postgresql://trading_user:your_password@localhost:5432/trading_expert
# Or for SQLite (default)
DATABASE_URL=sqlite:///data/trading_expert.db

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://urtradingexpert.com/api/telegram/webhook

# API Keys (add your actual keys)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_secret
ALPHA_VANTAGE_KEY=your_alpha_vantage_key

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=admin@urtradingexpert.com
SMTP_PASSWORD=your_gmail_app_password
FROM_EMAIL=noreply@urtradingexpert.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/trading_expert.log

# Security
CORS_ORIGINS=https://urtradingexpert.com,https://www.urtradingexpert.com,https://web.telegram.org,https://t.me
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION=7

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/urtradingexpert.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/urtradingexpert.com/privkey.pem
